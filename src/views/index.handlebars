<header class="header">
    <a href="./productList.handlebars"></a>
</header>
<nav class="navegacion">
    <a href="/api/session/login">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="52" height="52"
            viewBox="0 0 24 24" stroke-width="1.5" stroke="#ff9300" fill="none" stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
        </svg>
    </a>
    <a class="navegacion__enlace navegacion__enlace--activo" href="./productList.handlebars">Productos</a>
    <a class="navegacion__enlace" href="./cart.handlebars">Carrito</a>
</nav>
<main class="contenedor">
    <h1>Nuestros Productos</h1>
    <div class="grid">
        {{#each products}}
        <div class="producto">
            <img class="producto__imagen" src={{this.thumbnails}} alt="imagen de producto">
            <div class="producto__informacion">
                <p class="producto__nombre">{{this.title}}</p>
                <p class="producto__precio">${{this.price}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</main>